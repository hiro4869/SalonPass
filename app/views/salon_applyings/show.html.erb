<h1>申請中のユーザー一覧</h1>
<br/>
<p><%= link_to "管理ページ", owner_salon_path(params[:id]) %> ＞ 申請中のユーザー一覧</p>
<br/>
<% if @SalonApplyingMember.present? %>
  <% @SalonApplyingMember.each do |user| %>
    <p>ユーザーid:<%= user.user_id %></p>
    <p>ニックネーム:<%= user.user.nickname %></p>
    <%= form_for @SalonApproved ,url: '/salon_approveds',method: :post do |f| %>
      <%= f.hidden_field :user_id, :value => user.user_id %>
      <%= f.submit "　承認する　" ,class: "btn btn-primary" %>
      <%= link_to "　却下する　", "/salon_applyings/#{user.id}", method: :delete, data: { confirm: '申請を却下しますか？' } , class: "btn btn-danger" %>
    <% end %>
    <hr>
  <% end %>
<% else %>
  <p>申請中のユーザーはおりません。</p>
<% end %>



