<h1>マイショップ管理画面</h1>
<br/>
<% @products.each do |product| %>
  <div class="shop-product-box">
    <p class="shop-product-name">商品名：<%= product.product_name %></p>
    <p>価格：<%= product.price %>円</p>
    <p>商品説明：<%= product.description.html_safe %></p>
    <p>
      <%= link_to "　編集　", edit_salon_product_path(params[:salon_id],product.id), class: "btn btn-success" %>
      <%= link_to "削除する", "/salons/#{params[:salon_id]}/products/#{product.id}", method: :delete, class: "btn btn-danger" %>
    </p>
  </div>
<% end %>
