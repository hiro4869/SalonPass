<h1>Post Index</h1>

<% @posts.each do |post| %>
  <p>タイトル：<%= post.title %></p>
  <p>本文：<%= post.body %></p>
  <%= form_for @comment , url: "/salons/#{params[:salon_id]}/posts/#{post.id}/post_comments" , method: :post do |f| %>
    <p>コメント：<%= f.text_field :body %></p>
    <p><%= f.submit "コメントする" %></p>
  <% end %>
  <p>【コメント一覧】</p>
  <% post.post_comments.each do |comment| %>
    <p>・<%= comment.body %></p>
  <% end %>


  <a>--------------------------------</a>
<% end %>


<p><%= link_to "サロントップ", salon_path(@salon_id) %></p>



